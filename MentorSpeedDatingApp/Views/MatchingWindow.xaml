<Window x:Class="MentorSpeedDatingApp.Views.MatchingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MentorSpeedDatingApp.Views"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:MentorSpeedDatingApp.ViewModel"
        xmlns:rsc="clr-namespace:MentorSpeedDatingApp.Resources"
        xmlns:converter="clr-namespace:MentorSpeedDatingApp.Converter"
        xmlns:userControls="clr-namespace:MentorSpeedDatingApp.Views.UserControls"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="Mentor-Speed-Dating Matching-Ergebnisse"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Window.DataContext>
        <vm:MatchingViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Uhrzeit" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold"/>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding DateTimes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate >
                            <TextBox Text="{Binding TimeSlot.Time, ConverterCulture=de-DE, StringFormat=t}" Style="{StaticResource DataTemplateDateTimeTextBlockStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
        <Grid Column="1" Margin="10,0,0,0" Grid.Row="0">
            <ItemsControl ItemsSource="{Binding Matchings}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Style="{StaticResource DataTemplateMatchingGridStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0" Style="{StaticResource DataTemplateMentorTextBoxStyle}">
                                <TextBox.Text>
                                    <MultiBinding Converter="{StaticResource NameConverter}">
                                        <Binding Path="Mentor.Titel" />
                                        <Binding Path="Mentor.Name" />
                                    </MultiBinding>
                                </TextBox.Text>
                            </TextBox>

                            <ItemsControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Dates}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBox Style="{StaticResource DataTemplateMenteeTextBoxStyle}"
                                                     Text="{Binding Mentee}" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <telerik:RadButton Style="{StaticResource MatchingWindowButtonStyle}" Grid.Column="0" Content="Exportieren"></telerik:RadButton>
            <telerik:RadButton Style="{StaticResource MatchingWindowButtonStyle}" Grid.Column="1" Content="Drucken"></telerik:RadButton>
        </Grid>
    </Grid>
</Window>